<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NavigationBarFragment">

    <LinearLayout
        android:id="@+id/Navigator_layout_down"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginBottom="0dp"
        android:background="#646060"
        tools:layout_editor_absoluteY="1dp" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="101dp"
            android:layout_height="94dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/ic_spdmeter_fixed" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:text="100 км/ч"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="138dp"
            android:layout_height="152dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#CA2222"
            android:text="Какой-то поворот"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:text="100 м"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="111dp"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="9dp"
            android:text="Осталось:"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="110dp"
            android:layout_height="142dp"
            android:layout_marginEnd="5dp"
            android:text="47 км \n за \n 30 мин"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

</FrameLayout>