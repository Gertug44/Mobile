<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:visibility="visible"
    tools:visibility="visible">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Start_layout"
        android:layout_width="436dp"
        android:layout_height="240dp"
        android:background="#646060"
        android:visibility="gone"
        tools:visibility="gone">

        <EditText
            android:id="@+id/address_start"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="57dp"
            android:background="@color/bg_color_gr"
            android:backgroundTint="#C4C4C4"
            android:ems="10"
            android:inputType="textShortMessage"
            map:layout_constraintBottom_toTopOf="@+id/nav_btn"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.219"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/address_end"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:background="@color/bg_color_gr"
            android:backgroundTint="#C4C4C4"
            android:ems="10"
            android:inputType="textShortMessage"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/address_start"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/nav_btn"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:background="@color/bg_color_red"
            android:onClick="onClick_StartNav"
            android:text="Проложить маршрут"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/address_end"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/locate_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@color/bg_color_gre"
            android:onClick="onClick_locate"
            android:text="Определить местоположение"
            android:textSize="11sp"
            map:layout_constraintEnd_toStartOf="@+id/nav_btn"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/address_end"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Tools_layout"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:background="#FFA800"
            map:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="123dp">

            <Button
                android:id="@+id/sync_btn"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:background="@color/bg_color_or"
                android:onClick="onClick_sync"
                android:text="Синхронизация"
                android:textSize="11sp"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/options_btn"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:background="@color/bg_color_or"
                android:onClick="onClick_options"
                android:text="Настройки"
                android:textSize="11sp"
                map:layout_constraintEnd_toStartOf="@+id/sync_btn"
                map:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/notifications_btn"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:background="@color/bg_color_or"
                android:onClick="onClick_notifications"
                android:text="Оповещения"
                android:textSize="11sp"
                map:layout_constraintEnd_toStartOf="@+id/fave_btn"
                map:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/fave_btn"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:background="@color/bg_color_or"
                android:onClick="onClick_fave"
                android:text="Избранное"
                android:textSize="11sp"
                map:layout_constraintEnd_toStartOf="@+id/options_btn"
                map:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Navigator_layout"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="#646060"
        android:visibility="visible"
        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="320dp"
            android:layout_height="49dp"
            android:layout_marginBottom="19dp"
            android:background="#646060"
            android:outlineProvider="none"
            android:progress="50"
            android:progressBackgroundTint="#B1B1B1"
            android:progressTint="#00f570"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/end_btn"
            android:layout_width="84dp"
            android:layout_height="35dp"
            android:layout_marginStart="247dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="25dp"
            android:background="@color/bg_color_red"
            android:onClick="onClick_EndNav"
            android:text="ЗАВЕРШИТЬ ПОЕЗДКУ"
            android:textSize="11sp"
            map:layout_constraintBottom_toTopOf="@+id/progressBar"
            map:layout_constraintEnd_toEndOf="@+id/progressBar"
            map:layout_constraintEnd_toStartOf="@+id/imageView2"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="62dp"
            android:layout_height="51dp"
            android:layout_marginEnd="5dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.296"
            map:srcCompat="@drawable/pngwing_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Navigator_layout_down"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#646060"
        android:visibility="gone"
        tools:layout_editor_absoluteY="1dp"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="101dp"
            android:layout_height="94dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            map:layout_constraintStart_toEndOf="@+id/textView2"
            map:layout_constraintTop_toTopOf="parent"
            map:srcCompat="@drawable/ic_spdmeter_fixed"
            map:tint="#FFFFFF"
            tools:srcCompat="@drawable/ic_spdmeter_fixed" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:text="100 км/ч"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintStart_toEndOf="@+id/textView2"
            map:layout_constraintTop_toBottomOf="@+id/imageView"
            map:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="138dp"
            android:layout_height="152dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#CA2222"
            android:text="Какой-то поворот"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:text="100 м"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            map:layout_constraintEnd_toEndOf="@+id/textView2"
            map:layout_constraintStart_toStartOf="@+id/textView2"
            map:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="111dp"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="9dp"
            android:text="Осталось:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            map:layout_constraintBottom_toTopOf="@+id/textView5"
            map:layout_constraintEnd_toStartOf="@+id/textView2"
            map:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="110dp"
            android:layout_height="142dp"
            android:layout_marginEnd="5dp"
            android:text="47 км \n за \n 30 мин"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            map:layout_constraintEnd_toStartOf="@+id/textView2"
            map:layout_constraintTop_toBottomOf="@+id/textView4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>